mixin storeForm(store = {})

    form.card(action=`/add/${store._id || ''}`, method="post" enctype="multipart/form-data")
        label(for="name") Name
        input#name(name="name" value=store.name)

        label(for="description") Description
        textarea#description(name="description")= store.description

        label(for="photo") Photo
        input#photo(type="file", name="photo", accept="image/*")
        if (store.photo)
            img(src=`/uploads/${store.photo}`, alt=store.name width=200)

        label(for="address") Address
        input(id="address" name="location[address]" value=(store.location && store.location.address))

        label(for="lng") Address Lng
        input(id="lng" name="location[coordinates][0]" value=(store.location && store.location.coordinates[0]) required)
        label(for="lat") Address Lat
        input(id="lat" name="location[coordinates][1]" value=(store.location && store.location.coordinates[1]) required) 

        - const tags = store.tags || []
        - const choices = ['Wifi', 'Open Late', 'Family Friendly', 'Vegetarian', 'Licensed']
        label(for="tags")
        ul.tags
            each choice in choices
                .tag.tag__choice
                    input(type='checkbox', id=choice, value=choice, name="tags" checked=tags.includes(choice))
                    label(for=choice) #{choice}

        input.button(type="submit", value="Save")

